#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

if [ ! -s $3/INSTANA_AGENT_KEY -o ! -s $3/INSTANA_LOCATION ]; then
  echo "Must set INSTANA_AGENT_KEY and INSTANA_LOCATION"
  exit 1
else
  agent_key=$(cat $3/INSTANA_AGENT_KEY)
  location=$(cat $3/INSTANA_LOCATION)
  curl -o setup_agent.sh https://setup.instana.io/agent && chmod 700 ./setup_agent.sh && ./setup_agent.sh -a $agent_key -l $location
fi | indent
